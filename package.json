{
  "name": "node-console",
  "version": "1.0.0",
  "description": "prettier console logs for your node project",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "dev": "yarn run test:watch",
    "prebuild": "yarn run clean && yarn run test",
    "build": "yarn run build:cjs && yarn run build:esm",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs --target es5",
    "build:esm": "tsc -p tsconfig.build.json --module esNext --outDir dist/esm --target es6",
    "pretest": "yarn run lint && yarn run types-check",
    "test": "jest",
    "test:watch": "yarn run test -- --watch --silent",
    "test:coverage": "ts-node ./scripts/coverage.ts",
    "clean": "rimraf -rf ./dist",
    "types-check": "tsc --noEmit",
    "release": "ts-node scripts/release.ts",
    "git:alias": "git config alias.cz 'npx cz'",
    "git:hookspath": "git config core.hooksPath .githooks",
    "git:preinstall": "yarn run git:hookspath && yarn run git:alias",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx}\" --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
